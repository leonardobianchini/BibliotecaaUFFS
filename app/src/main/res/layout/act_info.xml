<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bianchini.bibliotecauffs.actInfo"
    android:id="@+id/lyInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Biblioteca UFFS  v.Alpha \n\nInformações da biblioteca:\n1. Horário de funcionamento: Segunda a sexta das 7:30 às 22:30.\n2. Tempo de empréstimo: 10 dias.\n3. Renovação: a cada renovação, são adicionados 10 dias para a devolução a contar a partir da data de renovação, com limite de 100 renovações por livro.\n"
        android:id="@+id/textViewInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_buttonvoltar"
        android:id="@+id/buttonVoltar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewInfo"
        android:layout_alignEnd="@+id/textViewInfo" />
</RelativeLayout>
